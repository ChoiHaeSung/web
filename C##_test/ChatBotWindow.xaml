<Window x:Class="RestaurantReservationApp.ChatBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="챗봇" Height="500" Width="400">
    <Grid>
        <TextBlock Text="챗봇 창" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="ChatTextBox" Width="350" Height="300" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Margin="25,50,25,100"/>
        <Button Content="Send" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="SendButton_Click"/>
    </Grid>
</Window>